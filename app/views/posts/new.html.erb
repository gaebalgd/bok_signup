<h1>New Post + </h1>
<hr>
<%= form_for :new_post, url: posts_path do |f| %>

  <%= f.label :title, "Title", class: "control-label" %>
  <%= f.text_field :title, :autocomplete => :off, :placeholder => "Be specific! Should be about ___ language.", class: "col-md-12 form-control" %>
  <%= f.label :text, "Contents", class: "control-label" %>
  <%= f.text_area :text, :autocomplete => :off, :placeholder => "Explain your question...", class: "col-md-12 form-control", rows: "15" %>

  <%= f.submit "Ask!", class: "col-md-3 btn btn-primary" %>
<% end %>
